@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listBanner = (List<Model.EntityFramework.Banner>)ViewBag.ListBanner;
    var listMatch = (List<Model.ViewModel.MatchViewModel>)ViewBag.ListMatch;
    var i = 0;
}

@section banner {
    <div class="demo-2">
    <div id="slider" class="sl-slider-wrapper">
        <div class="sl-slider">
            @foreach (var item in listBanner)
            {
                i = i + 1;
                var cssClass = "bg-img-" + i;
                <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="-25" data-slice2-rotation="-25" data-slice1-scale="2" data-slice2-scale="2">
                    <div class="sl-slide-inner">
                        <div class="bg-img @cssClass" style="background: url(@item.Image) no-repeat;
                                                            background-position:center;
	                                                        background-attachment:fixed;
	                                                        background-size:cover;
	                                                        -webkit-background-size:cover;
	                                                        -moz-background-size:cover;
	                                                        -o-background-size:cover;
	                                                        -ms-background-size:cover;">

                        </div>
                        <div class="container">
                            <h3>@item.Name</h3>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
            
        </div><!-- /sl-slider -->
        <nav id="nav-dots" class="nav-dots">
            @foreach (var item in listBanner)
            {
                <span></span>
            }
        </nav>
    </div><!-- /slider-wrapper -->
</div>
}

@section info {
    <section class="info-w3ls">
    <div class="container">
        @foreach (var item in listMatch)
        {
            var link = "/Match/Detail/" + item.MetaTitle + "-" + item.ID;
            <div class="col-lg-6 col-md-6 info-wthree">
                <div class="info-agile1">
                    <div class="col-xs-5 info-w3layouts1" data-aos="flip-left">
                        <div class="ch-grid">
                            <div>
                                <div class="ch-item">
                                    <div class="ch-info">
                                        <div class="ch-info-front ch-img-1" style="background-image: url(@item.Image);"></div>
                                        <div class="ch-info-back1" style="background:url(@item.Image);">
                                            <h3>Bike Race</h3>
                                            <p>Feel The Speed</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-7 info-w3layouts2" data-aos="flip-right">
                        <div class="info-agileits">
                            <h4>@item.HomeClubName - @item.VisitingClubName</h4>
                            <p>Stadium: @item.StadiumName</p>
                            <p>Address: @item.HoldAddress</p>
                            <a href="@link"><i class="fa fa-hand-o-right" aria-hidden="true"></i> Read More</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>
</section>
}

