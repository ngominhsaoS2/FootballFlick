@using PagedList.Mvc
@model PagedList.IPagedList<Model.EntityFramework.Stadium>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Assets/Admin/js/lib/datatables/datatables.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
    <script src="/Assets/Admin/js/lib/datatables/datatables-init.js"></script>
    <script src="/Assets/Admin/js/controller/stadiumController.js"></script>
}

@section pageTitle{
    <div class="row page-titles">
        <div class="col-md-8 align-self-center ">
            <h3 class="text-primary"><a href="/Admin/Stadium/Index">Stadium</a></h3>
        </div>
        <div class="col-md-4 align-self-center">
            @using (Html.BeginForm("Index", "Stadium", FormMethod.Get))
            {
                <div class="input-group">
                    <input type="text" value="@ViewBag.SearchString" class="form-control form-control input-sm" name="searchString" />
                    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-search"></i></button>
                    <a class="btn btn-info btn-sm" href="javascript:history.go(-1)" role="button"><i class="fas fa-eraser"></i></a>
                    <a class="btn btn-info btn-sm" href="/Admin/Stadium/Create" role="button"><i class="fas fa-plus"></i></a>
                </div>
            }
        </div>
    </div>
}

<div class="container-fluid">
    <!-- Start Page Content -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tableStadium" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th style="min-width:200px">Address</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th style="min-width:100px">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td><img class="img-responsive" width="150" height="auto" src="@item.Image" alt=""></td>
                                        <td>@(item.Status ? "Active" : "Not available")</td>
                                        <td>
                                            <a href="#" data-id="@item.ID" class="btn-images">More images</a>
                                            |
                                            <a href="/Admin/Stadium/Edit/@item.ID">Edit</a>
                                            |
                                            @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Do you really want to delete this row?",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                HttpMethod = "Delete"
                                            })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Content -->
</div>

<!-- Modal -->
<div id="imagesManage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">More images</h4>
            </div>
            <div class="modal-body">
                <div id="imageList" style="margin:5px;">
                </div>
                <div class="clear"></div>
                <input type="button" id="btnChooseImages" class="btn btn-primary" value="Select images" />
                <input type="hidden" id="hidStadiumID" value="0" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSaveImages">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>